<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.bartek.andprojtest.contacts">

    <ImageView
        android:layout_width="100px"
        android:layout_height="100px"
        android:id="@+id/imageViewC"
        android:src="@drawable/cont"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageView
        android:layout_width="50px"
        android:layout_height="50px"
        android:id="@+id/imageButtonSendC"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:src="@drawable/send"/>

    <ImageView
        android:layout_width="50px"
        android:layout_height="50px"
        android:id="@+id/imageButtonAddC"
        android:src="@drawable/cont"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/imageButtonRemoveC"
        android:layout_toEndOf="@+id/imageButtonRemoveC" />

    <ImageView
        android:layout_width="50px"
        android:layout_height="50px"
        android:id="@+id/imageButtonRemoveC"
        android:src="@drawable/removeall"
        android:layout_below="@+id/listViewC"
        android:layout_toRightOf="@+id/imageButtonSendC"
        android:layout_toEndOf="@+id/imageButtonSendC" />

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:id="@+id/listViewC"
        android:layout_below="@+id/imageViewC"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_above="@+id/imageButtonSendC" />


</RelativeLayout>
